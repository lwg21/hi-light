<h1>Add a tag</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h1>Add new tag for <%= @highlight.quote %></h1>

      <%= simple_form_for [@highlight, @hi_tag], class: "form", html: {} do |f| %>
        <%= f.input :tag, collection: @tags, include_hidden: false  %>
        <%= f.submit "Add tag", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
