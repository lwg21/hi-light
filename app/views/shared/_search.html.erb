<div class="container-searchbar d-flex justify-content-center">
  <div class="search-by-buttons">
    <%= link_to books_path do %>
      <i class="fa-solid fa-book"></i>
    <% end %>
    <%= link_to tags_path do %>
      <i class="fa-solid fa-tag"></i>
    <% end %>
    <%= link_to highlights_path do %>
      <i class="fa-solid fa-quote-left"></i>
    <% end %>
  </div>
  <div class="d-row">
      <div class="search">
        <%= form_with url: books_path, method: :get, class: "d-flex" do %>
          <div class="search-form-control form-group">
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Search by book, author, tag or quote..."
            %>
            <button type="submit" class= "submit-btn"><i class="fas fa-search"></i></button>
          </div>
        <% end %>
      </div>
  </div>
</div>
